{% macro recalcRequiredPanel(prisonerNumber, crdUrl) %}

<article class="moj-ticket-panel" aria-label="Sub navigation 1">

          <section class="moj-ticket-panel__content moj-ticket-panel__content--grey govuk-!-margin-bottom-8" aria-label="Section 1">
            <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Perform a calculation</h2>
            <p class="govuk-body">Some information has changed. Check that all information is up to date then calculate release dates.</p>
            <a href="{{ crdUrl }}/calculation/{{ prisonerNumber }}/reason" class="govuk-button govuk-!-margin-bottom-1" data-module="govuk-button">
              Calculate release dates
            </a>
          </section>

      </article>

{% endmacro %}