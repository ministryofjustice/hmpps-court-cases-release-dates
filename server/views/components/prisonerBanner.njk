{% macro prisonerBanner(prisoner, digitalPrisonServicesUrl) %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="dwf-header govuk-!-margin-top-6 govuk-!-margin-bottom-4">
                <div class="dwf-header-inner">
                    <div class="govuk-grid-column-one-third govuk-!-padding-left-0">
                        <div class="dwf-header-left">
                            <img class="dwf-header-profile-img" src="/api/person/{{ prisoner.prisonerNumber }}/image" alt="{{ prisoner.firstName + ' ' + prisoner.lastName }}">
                        </div>
                        <p class="govuk-heading-s govuk-!-margin-bottom-1"><a class="govuk-link--no-visited-state" href="{{ digitalPrisonServicesUrl }}/prisoner/{{ prisoner.prisonerNumber }}" target="_blank">{{ prisoner.firstName + ' ' + prisoner.lastName }}</a></p>
                        <ul class="govuk-list">
                            <li>{{ prisoner.prisonerNumber }}</li>
                        </ul>
                    </div>
                    <div class="govuk-grid-column-two-thirds govuk-!-padding-0">
                        <ul class="dwf-header-info">
                            <li><span class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-padding-0">Date of birth</span><span class="govuk-body">{{ prisoner.dateOfBirth }}</span></li>
                            <li><span class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-padding-0">PNC number</span><span class="govuk-body">{{ prisoner.pncNumber if prisoner.pncNumber else '-' }}</span></li>
                            <li><span class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-padding-0">Status</span><span class="govuk-body">{{ prisoner.status }}</span></li>
                            <li><span class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-padding-0">Establishment</span><span class="govuk-body">{{ prisoner.prisonName }}</span></li>
                            <li><span class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-padding-0">Cell number</span><span class="govuk-body">{{ prisoner.cellLocation }}</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}